{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="container">
        <h2>Recherche selon criteres</h2>
        <form action="index.php?c=GestionClient&a=rechercheClients" method="post">
            <div class="form-group">
                <label for="titre">Titre</label>
                <select class="form-control" id="titre" name="titreCli">
                    <option>Choisir ...</option>
                    {% for titre in titres %}
                        <option>{{ titre }}</option>
                    {% endfor %}
                </select>
                <label for="titre">CP</label>
                <select class="form-control" id="cp"
                        <option>Choisir ...< /option>
                        {% for cp in cps %}
                        <option>{{ cp }}</option>
                        {% endfor %}
                </select>
                <label for="titre">Ville</label>
                <select class="form-control" id="ville"
                        <option>Choisir ...</option>
                    {% for ville in villes %}
                        <option>{{ ville }}</option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-default">Voir</button>
        </form>
    </div>
{% endblock %}
{% block footer %}
    {{ parent () }}
    <script type="text/javascript" src="assets/js/functions.js"></script>
{% endblock %}