{% extends "layout.html.twig" %}
{% block contenu %}
    
    <p><h2> Liste des clients </h2></p>

<table>
    <tr>
        
    <th scope="col">Id</th>
    <th scope="col">Nom</th>
    <th scope="col">Prenom</th>
    <th scope="col">Adresse</th>
    <th scope="col">Adresse 2</th>
    <th scope="col">CP</th>
    <th scope="col">Ville</th>
    <th scope="col">Tel</th>
    </tr>
    
    
    {% for unClient in Clients %}
        <tr>
        <td>{{ unClient.getId() }}</td>
        <td>{{ unClient.getPrenomCli() }}</td> 
        <td>{{ unClient.getNomCli() }}</td>
        <td>{{ unClient.getAdresseRue1Cli() }}</td>
        {% if unClient.getAdresseRue2Cli() %}
            <td>{{ unClient.getAdresseRue2Cli() }}</td>
        {% else %}
            <td>-----</td>
        {% endif %}
        <td>{{ unClient.getCpCli() }}</td>
        <td>{{ unClient.getVilleCli() }}</td>
        <td>{{ unClient.getTelCli() }}</p>
        </tr>
    {% endfor %}
</table>
<p>Nombre de Client : {{ Clients|length }}</p>
        
{% endblock %}
